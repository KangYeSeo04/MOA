generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           Int      @id @default(autoincrement())

  username     String   @unique
  email        String   @unique
  phone        String

  pw           String

  nickname     String?  // 회원가입에선 안 받으니까 optional

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

